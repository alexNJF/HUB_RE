        <div class="container">

            <div class="navbar-header fa" >
                
               @Html.ActionLink("هاب آر ای ", "index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
           
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="fa">&copy;  کلیه حقوق برای شرکت هاب آر ای  محفوظ است - تابستان 99 </p>
        </footer>
    </div>

